<Window x:Class="КозловControl9.Views.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:КозловControl9.Views.Windows"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10 0 0 0">
            <Border Height="100"/>
            <TextBlock FontSize="20"><Hyperlink Click="Hyperlink_Click">Добавить группу</Hyperlink></TextBlock>
            <Border Height="20"/>
            <TextBlock FontSize="20"><Hyperlink Click="Hyperlink_Click_1">Добавить соревноване</Hyperlink></TextBlock>
            <Border Height="20"/>
            <TextBlock FontSize="20"><Hyperlink Click="Hyperlink_Click_2">Учет</Hyperlink></TextBlock>
        </StackPanel>

        <Frame Name="MainFrm" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
